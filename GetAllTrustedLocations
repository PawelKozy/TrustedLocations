$officeApps = @("Word", "Excel", "PowerPoint", "Outlook")

foreach ($app in $officeApps) {
    $key = "HKCU:\Software\Microsoft\Office\16.0\$app\Security\Trusted Locations\"
    $trustedLocations = Get-ItemProperty -Path $key
    Write-Host "Trusted Locations for $app:"
    if ($trustedLocations) {
        foreach($location in $trustedLocations)
        {
            Write-Host $location.Path
        }
    } else {
        Write-Host "No Trusted Locations found for $app"
    }
}
